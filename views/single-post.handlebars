{{!-- Getting post from the post-info.handlebars --}}
{{> post-info post}}

{{!-- Create comment form with submit button --}}
{{#if loggedIn}}
<section>
        <div class="comment-box">
            <div class="top-part"></div>
            <div class="comment-label">
                <label for="comment">Comment</label>
            </div>
            <div class="comment-area">
                <textarea name="comment" id="comment" cols="210" rows="10"></textarea>
            </div>
            <div>
                <button id="submit-comment" class="btn-submit"><span class="submit">Submit</span></button>
            </div>
        </div>
    </section>
{{/if}}